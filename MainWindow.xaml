<Window
    x:Class="Student_Schedule.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Student_Schedule"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800">
    <Canvas>
        <Button
            x:Name="btnAddProgramming"
            Content="Programming"
            Canvas.Left="35"
            Canvas.Top="85"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Height="64"
            Width="113"
            Click="btnAddProgramming_Click" />
        <Button
            x:Name="btnDataBase"
            Content="Database"
            Canvas.Left="35"
            Canvas.Top="205"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="113"
            Height="64"
            Click="btnDataBase_Click" />
        <Button
            x:Name="btnFrontEnd"
            Content="Front End Web Dev"
            Canvas.Left="35"
            Canvas.Top="327"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="113"
            Height="64"
            Click="btnFrontEnd_Click" />
        <Button
            x:Name="btnFinalizeSchedule"
            Content="Finalize Schedule"
            Canvas.Left="201"
            Canvas.Top="376"
            RenderTransformOrigin="-0.127,1.277"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="253"
            Click="btnFinalizeSchedule_Click" />
        <RichTextBox
            Height="279"
            Width="253"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Canvas.Left="201"
            Canvas.Top="85">
            <FlowDocument>
                <Paragraph>
                    <Run
                        x:Name="rtbDisplaySchedule"
                        Text="" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox
            Height="329"
            Width="279"
            HorizontalAlignment="Center"
            Canvas.Left="481"
            VerticalAlignment="Top"
            Canvas.Top="85">
            <FlowDocument>
                <Paragraph>
                    <Run
                        x:Name="rtbPreviousSchedule"
                        Text="" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label
            Content="Student Name"
            Canvas.Left="201"
            Canvas.Top="42"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="93" />
        <TextBox
            x:Name="txtName"
            Canvas.Left="308"
            TextWrapping="Wrap"
            Canvas.Top="46"
            Width="146"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <ComboBox
            x:Name="cmbChooseSchedule"
            Canvas.Left="481"
            Canvas.Top="33"
            Width="279"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            SelectionChanged="cmbChooseSchedule_SelectionChanged" />

    </Canvas>
</Window>
